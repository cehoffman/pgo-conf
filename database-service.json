{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{.Name}}",
        "labels": {
            "crunchy-database": "{{.Name}}",
            "name": "{{.Name}}"
        }
    },
    "spec": {
        "ports": [{
            "protocol": "TCP",
            "port": {{.Port}},
            "targetPort": {{.Port}},
            "nodePort": 0
        }],
        "selector": {
            "name": "{{.Name}}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
    }
}
