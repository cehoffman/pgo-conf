{
    "apiVersion": "extensions/v1beta1",
    "kind": "Job",
    "metadata": {
        "name": "{{.Name}}"
    },
    "spec": {
        "selector": {
            "matchLabels": {
                "app": "{{.Name}}"
            }
        },
        "template": {
            "metadata": {
                "name": "{{.Name}}",
                "labels": {
                    "app": "{{.Name}}",
                    "crunchy-database": "{{.Name}}"
                }
            },
            "spec": {
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "{{.PVC_NAME}}"
                    }
                }],
                "securityContext": {
                    "supplementalGroups": [65534]
                },
                "containers": [{
                    "name": "backup",
                    "image": "crunchydata/crunchy-backup:{{.CCP_IMAGE_TAG}}",
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],
                    "env": [{
                        "name": "BACKUP_HOST",
                        "value": "{{.BACKUP_HOST}}"
                    }, {
                        "name": "BACKUP_USER",
                        "value": "{{.BACKUP_USER}}"
                    }, {
                        "name": "BACKUP_PASS",
                        "value": "{{.BACKUP_PASS}}"
                    }, {
                        "name": "BACKUP_PORT",
                        "value": "{{.BACKUP_PORT}}"
                    }]
                }],
                "restartPolicy": "Never"
            }
        }
    }
}
